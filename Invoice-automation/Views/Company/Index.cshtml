@model InvoiceAutomation.Web.ViewModels.CompanyListViewModel
@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-building me-2"></i>Companies</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item active">Companies</li>
                        </ol>
                    </nav>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add Company
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @if (Model.Companies != null && Model.Companies.Any())
        {
            @foreach (var company in Model.Companies)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@company.Name</h5>
                            @if (company.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">NTN:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(company.Ntn))
                                    {
                                        <code>@company.Ntn</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Provider:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@company.AccountingProvider</span>
                                </dd>

                                <dt class="col-sm-4">Users:</dt>
                                <dd class="col-sm-8">@company.UserCount</dd>

                                <dt class="col-sm-4">Invoices:</dt>
                                <dd class="col-sm-8">@company.InvoiceCount</dd>
                            </dl>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group btn-group-sm w-100">
                                <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-outline-info">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                                <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <a asp-action="Users" asp-route-id="@company.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-people me-1"></i>Users
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-building text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3">No Companies Found</h4>
                        <p class="text-muted">Create your first company to start managing invoices</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-2"></i>Add Company
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
