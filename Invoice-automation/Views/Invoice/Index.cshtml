@model InvoiceAutomation.Web.ViewModels.InvoiceListViewModel
@using MatchType = InvoiceAutomation.Web.Core.Enums.MatchType
@{
    ViewData["Title"] = "Invoices";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-receipt me-2"></i>Invoices</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item active">Invoices</li>
                        </ol>
                    </nav>
                </div>
                <a asp-action="Upload" class="btn btn-primary">
                    <i class="bi bi-upload me-2"></i>Upload Invoice
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <input type="text" name="SearchTerm" value="@Model.Filter?.SearchTerm" class="form-control" placeholder="Invoice # or vendor..." />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select name="Status" class="form-select">
                        <option value="">All Statuses</option>
                        @foreach (var status in Enum.GetValues<InvoiceStatus>())
                        {
                            <option value="@status" selected="@(Model.Filter?.Status == status)">@status</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">From Date</label>
                    <input type="date" name="FromDate" value="@Model.Filter?.FromDate?.ToString("yyyy-MM-dd")" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">To Date</label>
                    <input type="date" name="ToDate" value="@Model.Filter?.ToDate?.ToString("yyyy-MM-dd")" class="form-control" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search me-1"></i>Filter
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-1"></i>Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Invoice Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Invoices != null && Model.Invoices.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Invoice #</th>
                                <th>Vendor</th>
                                <th>Invoice Date</th>
                                <th>Due Date</th>
                                <th class="text-end">Amount</th>
                                <th>Status</th>
                                <th>Match</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.Invoices)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@invoice.Id" class="fw-bold text-decoration-none">
                                            @invoice.InvoiceNumber
                                        </a>
                                    </td>
                                    <td>@invoice.VendorName</td>
                                    <td>@invoice.InvoiceDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (invoice.DueDate.HasValue)
                                        {
                                            var isOverdue = invoice.DueDate.Value < DateTime.Today && invoice.Status != InvoiceStatus.Completed;
                                            <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                @invoice.DueDate.Value.ToString("dd MMM yyyy")
                                                @if (isOverdue)
                                                {
                                                    <i class="bi bi-exclamation-circle ms-1"></i>
                                                }
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">PKR @invoice.TotalAmount.ToString("N0")</td>
                                    <td>
                                        @{
                                            var statusClass = invoice.Status switch
                                            {
                                                InvoiceStatus.Draft => "secondary",
                                                InvoiceStatus.PendingManagerReview => "warning",
                                                InvoiceStatus.PendingAdminApproval => "info",
                                                InvoiceStatus.Approved => "success",
                                                InvoiceStatus.PaymentPending => "primary",
                                                InvoiceStatus.Completed => "success",
                                                InvoiceStatus.Rejected => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@invoice.Status</span>
                                    </td>
                                    <td>
                                        @{
                                            var matchClass = invoice.MatchType switch
                                            {
                                                MatchType.Exact => "success",
                                                MatchType.Partial => "warning",
                                                MatchType.Manual => "info",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@matchClass">@invoice.MatchType</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (invoice.Status == InvoiceStatus.Draft)
                                            {
                                                <a asp-action="Review" asp-route-id="@invoice.Id" class="btn btn-outline-success" title="Submit for Review">
                                                    <i class="bi bi-send"></i>
                                                </a>
                                            }
                                            @if (invoice.Status == InvoiceStatus.PendingManagerReview || invoice.Status == InvoiceStatus.PendingAdminApproval)
                                            {
                                                <a asp-action="Review" asp-route-id="@invoice.Id" class="btn btn-outline-warning" title="Review">
                                                    <i class="bi bi-check2-square"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem;" class="text-muted"></i>
                    <h4 class="mt-3">No Invoices Found</h4>
                    <p class="text-muted">Get started by uploading your first invoice</p>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="bi bi-upload me-2"></i>Upload Invoice
                    </a>
                </div>
            }
        </div>
    </div>
</div>
