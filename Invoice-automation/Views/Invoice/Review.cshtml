@model InvoiceAutomation.Web.ViewModels.InvoiceReviewViewModel
@{
    ViewData["Title"] = "Review Invoice";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-check2-square me-2"></i>Review Invoice</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item"><a asp-action="Index">Invoices</a></li>
                            <li class="breadcrumb-item active">Review @Model.InvoiceNumber</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    @{
                        var statusClass = Model.Status switch
                        {
                            InvoiceStatus.Draft => "secondary",
                            InvoiceStatus.PendingManagerReview => "warning",
                            InvoiceStatus.PendingAdminApproval => "info",
                            InvoiceStatus.Approved => "success",
                            InvoiceStatus.PaymentPending => "primary",
                            InvoiceStatus.Completed => "success",
                            InvoiceStatus.Rejected => "danger",
                            _ => "secondary"
                        };
                    }
                    <span class="badge bg-@statusClass fs-6">@Model.Status</span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Invoice Image Preview -->
        <div class="col-lg-5 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-image me-2"></i>Invoice Document</h5>
                </div>
                <div class="card-body p-0 overflow-auto" style="max-height: calc(100vh - 200px);">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        @if (Model.ImagePath.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                        {
                            <embed src="@Url.Action("GetInvoiceFile", new { id = Model.Id })" type="application/pdf" width="100%" style="min-height: 800px;" />
                        }
                        else
                        {
                            <img src="@Url.Action("GetInvoiceFile", new { id = Model.Id })" class="img-fluid" alt="Invoice" />
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-file-earmark-x" style="font-size: 4rem;"></i>
                            <p class="mt-3">No invoice document available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Invoice Details & Approval -->
        <div class="col-lg-7 mb-4">
            <!-- Invoice Details Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Invoice Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Invoice #:</dt>
                                <dd class="col-sm-7">@Model.InvoiceNumber</dd>

                                <dt class="col-sm-5">Vendor:</dt>
                                <dd class="col-sm-7">@Model.VendorName</dd>

                                <dt class="col-sm-5">Vendor NTN:</dt>
                                <dd class="col-sm-7">@(Model.VendorNtn ?? "N/A")</dd>

                                <dt class="col-sm-5">Invoice Date:</dt>
                                <dd class="col-sm-7">@Model.InvoiceDate.ToString("dd MMM yyyy")</dd>

                                <dt class="col-sm-5">Due Date:</dt>
                                <dd class="col-sm-7">@(Model.DueDate?.ToString("dd MMM yyyy") ?? "N/A")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Match Type:</dt>
                                <dd class="col-sm-7">
                                    @{
                                        var matchClass = Model.MatchType switch
                                        {
                                            MatchType.Exact => "success",
                                            MatchType.Partial => "warning",
                                            MatchType.Manual => "info",
                                            _ => "secondary"
                                        };
                                    }
                                    <span class="badge bg-@matchClass">@Model.MatchType</span>
                                </dd>

                                <dt class="col-sm-5">OCR Confidence:</dt>
                                <dd class="col-sm-7">@(Model.OcrConfidence.HasValue ? Model.OcrConfidence.Value.ToString("P0") : "N/A")</dd>

                                <dt class="col-sm-5">Created By:</dt>
                                <dd class="col-sm-7">@Model.CreatedByName</dd>

                                <dt class="col-sm-5">Created At:</dt>
                                <dd class="col-sm-7">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Line Items Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Line Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Expense Account</th>
                                    <th class="text-end">Qty</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td>@item.ExpenseAccountName</td>
                                            <td class="text-end">@item.Quantity.ToString("N2")</td>
                                            <td class="text-end">@item.UnitPrice.ToString("N2")</td>
                                            <td class="text-end">@item.Amount.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Subtotal:</strong></td>
                                    <td class="text-end">PKR @Model.SubTotal.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Tax:</strong></td>
                                    <td class="text-end">PKR @Model.TaxAmount.ToString("N2")</td>
                                </tr>
                                <tr class="table-primary">
                                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                    <td class="text-end"><strong>PKR @Model.TotalAmount.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Notes Card -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-sticky me-2"></i>Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            }

            <!-- Approval History Card -->
            @if (Model.ApprovalHistory != null && Model.ApprovalHistory.Any())
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Approval History</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var approval in Model.ApprovalHistory.OrderByDescending(a => a.ActionDate))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-start px-0">
                                    <div>
                                        <strong>@approval.ApproverName</strong> (@approval.Level)
                                        <br />
                                        <small class="text-muted">@approval.ActionDate?.ToString("dd MMM yyyy HH:mm")</small>
                                        @if (!string.IsNullOrEmpty(approval.Comments))
                                        {
                                            <p class="mb-0 mt-1 fst-italic">"@approval.Comments"</p>
                                        }
                                    </div>
                                    @{
                                        var approvalStatusClass = approval.Status switch
                                        {
                                            ApprovalStatus.Approved => "success",
                                            ApprovalStatus.Rejected => "danger",
                                            _ => "warning"
                                        };
                                    }
                                    <span class="badge bg-@approvalStatusClass">@approval.Status</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- Action Card -->
            @if (Model.CanApprove)
            {
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Action Required</h5>
                    </div>
                    <div class="card-body">
                        <p>Please review the invoice details and take action.</p>

                        <form asp-controller="Approval" asp-action="ProcessApproval" method="post">
                            <input type="hidden" name="InvoiceId" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label">Comments</label>
                                <textarea name="Comments" class="form-control" rows="3" placeholder="Add your comments (optional for approval, required for rejection)..."></textarea>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" name="action" value="approve" class="btn btn-success">
                                    <i class="bi bi-check-lg me-2"></i>Approve
                                </button>
                                <button type="submit" name="action" value="reject" class="btn btn-danger" onclick="return confirm('Are you sure you want to reject this invoice?')">
                                    <i class="bi bi-x-lg me-2"></i>Reject
                                </button>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>Edit
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else if (Model.Status == InvoiceStatus.Draft)
            {
                <div class="card">
                    <div class="card-body">
                        <form asp-action="SubmitForApproval" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-send me-2"></i>Submit for Approval
                                </button>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>Edit
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-2"></i>Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            }
        </div>
    </div>
</div>
