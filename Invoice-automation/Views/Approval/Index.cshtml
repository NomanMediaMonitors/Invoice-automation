@model InvoiceAutomation.Web.ViewModels.ApprovalListViewModel
@{
    ViewData["Title"] = "Approvals";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-check2-square me-2"></i>Pending Approvals</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Approvals</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-start border-warning border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small text-uppercase">Pending Your Review</div>
                            <div class="h3 mb-0">@Model.PendingCount</div>
                        </div>
                        <i class="bi bi-hourglass-split text-warning" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-start border-success border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small text-uppercase">Approved by You</div>
                            <div class="h3 mb-0">@Model.ApprovedCount</div>
                        </div>
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-start border-danger border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small text-uppercase">Rejected by You</div>
                            <div class="h3 mb-0">@Model.RejectedCount</div>
                        </div>
                        <i class="bi bi-x-circle text-danger" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Approvals -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Invoices Awaiting Your Approval</h5>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.PendingApprovals != null && Model.PendingApprovals.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Invoice #</th>
                                <th>Vendor</th>
                                <th>Invoice Date</th>
                                <th>Due Date</th>
                                <th class="text-end">Amount</th>
                                <th>Approval Level</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var approval in Model.PendingApprovals)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Invoice" asp-action="Review" asp-route-id="@approval.InvoiceId" class="fw-bold">
                                            @approval.InvoiceNumber
                                        </a>
                                    </td>
                                    <td>@approval.VendorName</td>
                                    <td>@approval.InvoiceDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (approval.DueDate.HasValue)
                                        {
                                            var isOverdue = approval.DueDate.Value < DateTime.Today;
                                            <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                @approval.DueDate.Value.ToString("dd MMM yyyy")
                                                @if (isOverdue)
                                                {
                                                    <i class="bi bi-exclamation-circle ms-1" title="Overdue"></i>
                                                }
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <strong>PKR @approval.TotalAmount.ToString("N0")</strong>
                                    </td>
                                    <td>
                                        @{
                                            var levelClass = approval.RequiredLevel switch
                                            {
                                                ApprovalLevel.Manager => "info",
                                                ApprovalLevel.Admin => "warning",
                                                ApprovalLevel.SuperAdmin => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@levelClass">@approval.RequiredLevel</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@approval.SubmittedAt.ToString("dd MMM HH:mm")</small>
                                        <br />
                                        <small>by @approval.SubmittedByName</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Invoice" asp-action="Review" asp-route-id="@approval.InvoiceId" class="btn btn-outline-primary" title="Review">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-success" title="Quick Approve" data-bs-toggle="modal" data-bs-target="#approveModal" data-invoice-id="@approval.InvoiceId" data-invoice-number="@approval.InvoiceNumber" data-amount="@approval.TotalAmount.ToString("N0")">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" title="Quick Reject" data-bs-toggle="modal" data-bs-target="#rejectModal" data-invoice-id="@approval.InvoiceId" data-invoice-number="@approval.InvoiceNumber">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">All Caught Up!</h4>
                    <p class="text-muted">No invoices pending your approval</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-check-lg me-2"></i>Approve Invoice</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ProcessApproval" method="post">
                <div class="modal-body">
                    <input type="hidden" name="InvoiceId" id="approveInvoiceId" />
                    <input type="hidden" name="action" value="approve" />

                    <p>Approve invoice <strong id="approveInvoiceNumber"></strong> for PKR <strong id="approveAmount"></strong>?</p>

                    <div class="mb-3">
                        <label class="form-label">Comments (Optional)</label>
                        <textarea name="Comments" class="form-control" rows="2" placeholder="Add approval comments..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-lg me-2"></i>Approve
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-x-lg me-2"></i>Reject Invoice</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ProcessApproval" method="post">
                <div class="modal-body">
                    <input type="hidden" name="InvoiceId" id="rejectInvoiceId" />
                    <input type="hidden" name="action" value="reject" />

                    <p>Reject invoice <strong id="rejectInvoiceNumber"></strong>?</p>

                    <div class="mb-3">
                        <label class="form-label">Reason for Rejection <span class="text-danger">*</span></label>
                        <textarea name="Comments" class="form-control" rows="3" placeholder="Please provide a reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-lg me-2"></i>Reject
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Approve Modal
        document.getElementById('approveModal').addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            document.getElementById('approveInvoiceId').value = button.getAttribute('data-invoice-id');
            document.getElementById('approveInvoiceNumber').textContent = button.getAttribute('data-invoice-number');
            document.getElementById('approveAmount').textContent = button.getAttribute('data-amount');
        });

        // Reject Modal
        document.getElementById('rejectModal').addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            document.getElementById('rejectInvoiceId').value = button.getAttribute('data-invoice-id');
            document.getElementById('rejectInvoiceNumber').textContent = button.getAttribute('data-invoice-number');
        });
    </script>
}
