@model InvoiceAutomation.Web.ViewModels.PaymentListViewModel
@{
    ViewData["Title"] = "Payments";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-credit-card me-2"></i>Payments</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Payments</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-start border-warning border-4">
                <div class="card-body">
                    <div class="text-muted small text-uppercase">Pending Payments</div>
                    <div class="h4 mb-0">@(Model.PendingCount)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-info border-4">
                <div class="card-body">
                    <div class="text-muted small text-uppercase">Scheduled</div>
                    <div class="h4 mb-0">@(Model.ScheduledCount)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-success border-4">
                <div class="card-body">
                    <div class="text-muted small text-uppercase">Completed</div>
                    <div class="h4 mb-0">@(Model.CompletedCount)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-primary border-4">
                <div class="card-body">
                    <div class="text-muted small text-uppercase">Total Paid</div>
                    <div class="h4 mb-0">PKR @(Model.TotalPaidAmount.ToString("N0"))</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" id="paymentTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("Index", new { status = "pending" })">
                <i class="bi bi-hourglass-split me-1"></i>Pending Payment
                @if (Model.PendingCount > 0)
                {
                    <span class="badge bg-warning ms-1">@Model.PendingCount</span>
                }
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", new { status = "scheduled" })">
                <i class="bi bi-calendar-check me-1"></i>Scheduled
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", new { status = "completed" })">
                <i class="bi bi-check-circle me-1"></i>Completed
            </a>
        </li>
    </ul>

    <!-- Payments Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Payments != null && Model.Payments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Invoice #</th>
                                <th>Vendor</th>
                                <th>Invoice Date</th>
                                <th>Due Date</th>
                                <th class="text-end">Amount</th>
                                <th>Status</th>
                                <th>Scheduled Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model.Payments)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Invoice" asp-action="Edit" asp-route-id="@payment.InvoiceId">
                                            @payment.InvoiceNumber
                                        </a>
                                    </td>
                                    <td>@payment.VendorName</td>
                                    <td>@payment.InvoiceDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (payment.DueDate.HasValue)
                                        {
                                            var isOverdue = payment.DueDate.Value < DateTime.Today && payment.Status != PaymentStatus.Completed;
                                            <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                @payment.DueDate.Value.ToString("dd MMM yyyy")
                                                @if (isOverdue)
                                                {
                                                    <i class="bi bi-exclamation-circle ms-1" title="Overdue"></i>
                                                }
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">PKR @payment.Amount.ToString("N0")</td>
                                    <td>
                                        @{
                                            var statusClass = payment.Status switch
                                            {
                                                PaymentStatus.Pending => "warning",
                                                PaymentStatus.Scheduled => "info",
                                                PaymentStatus.Processing => "primary",
                                                PaymentStatus.Completed => "success",
                                                PaymentStatus.Failed => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@payment.Status</span>
                                    </td>
                                    <td>@(payment.ScheduledDate?.ToString("dd MMM yyyy") ?? "-")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (payment.Status == PaymentStatus.Pending)
                                            {
                                                <a asp-action="Schedule" asp-route-id="@payment.InvoiceId" class="btn btn-outline-primary" title="Schedule Payment">
                                                    <i class="bi bi-calendar-plus"></i>
                                                </a>
                                            }
                                            @if (payment.Status == PaymentStatus.Scheduled)
                                            {
                                                <a asp-action="Execute" asp-route-id="@payment.Id" class="btn btn-outline-success" title="Execute Payment">
                                                    <i class="bi bi-play-fill"></i>
                                                </a>
                                            }
                                            @if (payment.Status == PaymentStatus.Completed && payment.Id != Guid.Empty)
                                            {
                                                <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-outline-info" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-credit-card" style="font-size: 4rem;" class="text-muted"></i>
                    <h4 class="mt-3">No Payments Found</h4>
                    <p class="text-muted">Payments will appear here once invoices are approved</p>
                </div>
            }
        </div>
    </div>
</div>
