{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=InvoiceAutomation;User=root;Password=;"
  },
  "FileStorage": {
    "UploadPath": "Uploads",
    "MaxFileSizeMB": 25,
    "AllowedExtensions": [".pdf", ".png", ".jpg", ".jpeg", ".tiff", ".tif", ".bmp"]
  },
  "Tesseract": {
    "DataPath": "App_Data/tessdata",
    "Language": "eng"
  },
  "Accounting": {
    "Endraaj": {
      "BaseUrl": "https://api.endraaj.com/v1",
      "ClientId": "",
      "ClientSecret": ""
    },
    "QuickBooks": {
      "BaseUrl": "https://quickbooks.api.intuit.com/v3/company",
      "ClientId": "",
      "ClientSecret": ""
    }
  },
  "Approval": {
    "ManagerOnlyThreshold": 50000,
    "AdminRequiredThreshold": 500000,
    "CFORequiredThreshold": 1000000,
    "RequireAdminForNewVendor": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
